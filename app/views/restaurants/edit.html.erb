<h1>Editing Restaurant<%= @restaurant.name %></h1>

<%= form_for @restaurant  do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %> <br><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %> <br><br>

  <%= f.label :website %><br>
  <%= f.text_area :website %> <br><br>
  
  <%= f.label :phonenumber %><br>
  <%= f.telephone_field :phonenumber %> <br><br>

  <%= f.label :imageurl %><br>
  <%= f.text_field :imageurl %> <br><br>

  <%= f.label :email %><br>
  <%= f.email_field :email, required: true %> <br><br>

  <%= f.submit %>
<% end %>